{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "declaration": true,
      "removeComments": true,
      "resolveJsonModule": true,
      "noEmitOnError": true,
      "noUnusedLocals": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictPropertyInitialization": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "lib": ["es6", "dom"]
    },
    "include": ["src"],
    "exclude": ["dist"]
  }
  